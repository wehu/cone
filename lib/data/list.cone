module data/list

type list<a> {
  Nil
  Cons(a, list<a>)
}

fun reverse<a>(l : list<a>) : list<a> {
  var rest = l
  var newl = Nil<a>
  while (rest != Nil<a>) {
    val Cons(e, rest) = rest
    newl = Cons(e, newl)
  }
  newl
}

fun map<a, b>[e](l : list<a>, f : (a) -> e b) : e list<b> {
  var rest = l
  var newl = Nil<b>
  while (rest != Nil<a>) {
    val Cons(e, rest) = rest
    newl = Cons(f(e), newl)
  }
  reverse(newl)
}